<style>
    #login_box fieldset {
        text-align: left;
        margin: 0 auto;
        width: 400px;
    }

        #login_box fieldset .am-form-group {
            overflow: hidden;
        }

            #login_box fieldset .am-form-group label {
                width: 80px;
            }

            #login_box fieldset .am-form-group log_input {
                width: 300px;
            }

    #login_box #inpcode {
        width: 150px;
    }

    #login_box #code {
        display: inline-block;
        width: 80px;
        height: 40px;
        vertical-align: middle;
    }
    #login_box #login_img{
        display:none;
    }
</style>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div class="am-modal am-modal-no-btn" tabindex="-1" id="login_box">
    <div class="am-modal-dialog">
        <div class="am-modal-hd">
            登陆
            <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
        </div>
        <div class="am-modal-bd">
            @using (Ajax.BeginForm("Login", "Home", new AjaxOptions
{
    HttpMethod = "post",
    OnSuccess = "tips",
    OnBegin = "showLoading",
}, new
{
    @class = "am-form",
    @id = "login_form",
    @data_am_validator="true"
}))
            {
                <fieldset>
                    <div class="am-form-group">
                        <label for="doc-vld-name-2-0">用户名：</label>
                        <input class="log_input" type="text" id="doc-vld-name-2-0" name="account" placeholder="请输入用户名" required />
                    </div>

                    <div class="am-form-group">
                        <label for="doc-vld-pwd-1-0">密&nbsp;&nbsp;&nbsp; 码：</label>
                        <input class="log_input" type="password" id="doc-vld-pwd-1-0" name="password" placeholder="请输入密码" required/>
                    </div>
                    <div class="am-checkbox">
                        <label>
                            <input type="checkbox" checked> 记住十万年
                        </label>
                        <a href="#" style="float:right;margin:0px 10px;">密码遗忘?</a>
                        <a href="#" style="float:right">注册</a>
                    </div>

                    <button class="am-btn am-btn-secondary am-btn-block" type="submit"><i class="am-icon-spinner am-icon-spin" id="login_img"></i>提&nbsp;&nbsp;交</button>
                </fieldset>
            }
            <span id="login_result" style="color:red"></span>
        </div>
    </div>
</div>
<script>
    $(function () {
        ShowLogin();
    });
    function tips(data) {
        if (data == "true") {
            HideLogin();
            $("#login_img").hide();
        } else {
            $("#login_result").html(data);
        }
    }
    function showLoading() {
        $("#login_img").show();
    }
    function ShowLogin() {
        $("#login_box").modal('open');
    }
    function HideLogin() {
        $("#login_box").modal('close');
    }

</script>