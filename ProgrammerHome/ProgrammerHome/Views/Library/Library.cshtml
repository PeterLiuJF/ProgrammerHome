@model IEnumerable<ProgrammerHome.LibraryTypeModel>

@{
    ViewBag.Title = "Library";
    Layout = "~/Views/Shared/master.cshtml";
}
<style>
    #library_list {
        border: 1px solid #f5f5f5;
        border-radius: 10px;
        padding: 10px;
    }

    .library_query td {
        border-bottom: 1px dashed #f5f5f5;
    }

    .library_query .kind_title {
        float: left;
        width: 100px;
    }

    .library_query .kind_list {
        float: left;
    }

        .library_query .kind_list .choose {
            text-decoration:underline;
        }
</style>
<div id="library_list">
    <table class="library_query">
        <tr>
            <td class="kind_title">热门分类:</td>
            <td class="kind_list">
                <a href="javascript:void(0)" class="choose">全部</a>
                @foreach (var item in Model)
                {
                    <a href="javascript:void(0)">@item.Name</a>
                }
            </td>
        </tr>
    </table>
</div>
